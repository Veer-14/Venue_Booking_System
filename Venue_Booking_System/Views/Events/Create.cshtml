@model Event

@{
    ViewData["Title"] = "Create Event";
}

<div style="background-color: darkslategray; color: white; padding: 40px; border-radius: 15px; margin-top: 20px; max-width: 600px; margin-left: auto; margin-right: auto;">
    <div class="text-center mb-4">
        <h1 class="display-5">Create Event</h1>
    </div>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="EventName" class="form-label fw-bold"></label>
            <input asp-for="EventName" class="form-control" />
            <span asp-validation-for="EventName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EventDate" class="form-label fw-bold"></label>
            <input asp-for="EventDate" class="form-control" />
            <span asp-validation-for="EventDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label fw-bold"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="text-center mt-4">
            <input type="submit" value="Create" class="btn btn-outline-light px-4" />
            <a asp-action="Index" class="btn btn-outline-light ms-3">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
