@model IEnumerable<Event>

@{
    ViewData["Title"] = "Events";
}

<div style="background-color: darkslategray; color: white; padding: 40px; border-radius: 15px; margin-top: 20px;">
    <div class="text-center mb-4">
        <h1 class="display-5">Events</h1>

        <!-- Centered Create Button -->
        <a class="btn btn-outline-light mt-3" asp-action="Create">+ Create New Event</a>
    </div>

    <table class="table table-dark table-striped table-bordered mt-4">
        <thead class="thead-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.EventName)</th>
                <th>@Html.DisplayNameFor(model => model.EventDate)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.EventName)</td>
                    <td>@Html.DisplayFor(modelItem => item.EventDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>
                        <a class="btn btn-sm btn-outline-light" asp-action="Edit" asp-route-id="@item.EventId">Edit</a>
                        <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.EventId">Details</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.EventId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
