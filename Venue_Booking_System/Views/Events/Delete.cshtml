@model Event

@{
    ViewData["Title"] = "Delete Event";
}

<div style="background-color: darkslategray; color: white; padding: 40px; border-radius: 15px; margin-top: 20px; max-width: 600px; margin-left: auto; margin-right: auto;">
    <div class="text-center mb-4">
        <h1 class="display-5">Delete Event</h1>
        <h4>Are you sure you want to delete this event?</h4>
    </div>

    <dl class="row justify-content-center">
        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.EventName)</dt>
        <dd class="col-sm-6">@Html.DisplayFor(model => model.EventName)</dd>

        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.EventDate)</dt>
        <dd class="col-sm-6">@Html.DisplayFor(model => model.EventDate)</dd>

        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-sm-6">@Html.DisplayFor(model => model.Description)</dd>
    </dl>

    <div class="text-center mt-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="EventId" />
            <input type="submit" value="Delete" class="btn btn-outline-danger px-4" />
            <a asp-action="Index" class="btn btn-outline-light ms-3">Cancel</a>
        </form>
    </div>
</div>
