@model IEnumerable<Venue_Booking_System.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<div style="background-color: darkslategray; color: white; padding: 40px; border-radius: 15px; margin-top: 20px;">
    <div class="text-center mb-4">
        <h1 class="display-5">Bookings</h1>

        <!-- Search Form -->
        <form asp-controller="Bookings" asp-action="Index" method="get" class="d-flex justify-content-center mb-3">
            <div class="form-group mx-2">
                <input type="text" name="searchBookingId" value="@Context.Request.Query["searchBookingId"]"
                       class="form-control" placeholder="Search by Booking ID" />
            </div>
            <div class="form-group mx-2">
                <input type="text" name="searchEventName" value="@Context.Request.Query["searchEventName"]"
                       class="form-control" placeholder="Search by Event Name" />
            </div>
            <div class="form-group mx-2">
                <input type="submit" value="Search" class="btn btn-light" />
            </div>
        </form>

        <!-- Create Button -->
        <a class="btn btn-outline-light mt-3" asp-action="Create">+ Create New Booking</a>
    </div>

    <table class="table table-dark table-striped table-bordered mt-4">
        <thead class="thead-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.BookingId)</th>
                <th>@Html.DisplayNameFor(model => model.Event)</th>
                <th>@Html.DisplayNameFor(model => model.Venue)</th>
                <th>@Html.DisplayNameFor(model => model.BookingDate)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.BookingId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Event.EventName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Venue.VenueName)</td>
                    <td>@Html.DisplayFor(modelItem => item.BookingDate)</td>
                    <td>
                        <a class="btn btn-sm btn-outline-light" asp-action="Edit" asp-route-id="@item.BookingId">Edit</a>
                        <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.BookingId">Details</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.BookingId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
